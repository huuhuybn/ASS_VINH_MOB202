<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:id="@+id/tv_khoan_thu"
            android:layout_marginRight="24dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/tv_khoan_thu"
            android:src="@drawable/ic_edit_black_24dp"
            android:layout_marginRight="24dp"
            android:layout_alignBottom="@id/tv_khoan_thu"
            android:background="@color/colorPrimary"
            android:id="@+id/edit_khoan_thu" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_toRightOf="@id/edit_khoan_thu"
            android:src="@drawable/ic_delete_black_24dp"
            android:layout_alignBottom="@id/tv_khoan_thu"
            android:background="@color/colorPrimary"
            android:id="@+id/delete_khoan_thu" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>

</LinearLayout>